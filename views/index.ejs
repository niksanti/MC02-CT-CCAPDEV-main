        <!-- NAVBAR -->
    
        <div class="row">
            <div class="column">
                <H1 style="text-align: center"> Daily Cases</H1>
                <!-- GRAPH DAILY-->
                <canvas id="myChart" style="width:100%;max-width:600px;margin:auto"></canvas>
                <script>
                    var xValues = ['<%= CovidNum[0].date %>','<%= CovidNum[1].date %>','<%= CovidNum[2].date %>','<%= CovidNum[3].date %>','<%= CovidNum[4].date %>','<%= CovidNum[5].date %>'];
                    
                    new Chart("myChart", {
                    type: "line",
                    data: {
                        labels: xValues,
                        datasets: [{ 
                            data: ['<%= CovidNum[0].addcases %>','<%= CovidNum[1].addcases %>','<%= CovidNum[2].addcases %>','<%= CovidNum[3].addcases %>','<%= CovidNum[4].addcases %>','<%= CovidNum[5].addcases %>'],
                        borderColor: "red",
                        fill: false
                     
                        }]
                    },
                    options: {
                        legend: {display: false}
                    }
                    });
                    </script>
                <!-- GRAPH DAILY-->
    
                <h1 style="text-align:left"> Data Analysis </h1>
               <!-- current daily -->
               <table class="inline">
                <tr>
                    <th> Current daily additional cases:</th>
                    <td> <%= CovidNum[0].addcases %></td>
                </tr>

                <tr>
                    <th> Current daily additional death:</th>
                    <td> <%= CovidNum[0].adddeath %> </td>
                </tr>

                <tr>
                    <th> Current daily additional recoveries:</th>
                    <td> <%= CovidNum[0].addrecoveries %></td>
                </tr>

                <tr>
                    <th> Current daily additional Severe and Critical cases:</th>
                    <td><%= CovidNum[0].addsevere %> </td>
                </tr>
    
    
    
            </table>
            
            <!-- previous daily -->
            <table class="inline">
                <tr>
                    <th> Previous daily additional cases:</th>
                    <td> <%= CovidNum[1].addcases %></td>

                </tr>

                <tr>
                    <th> Previous daily additional death:</th>
                    <td> <%= CovidNum[1].adddeath %> </td>

                </tr>

                <tr>
                    <th> Previous daily additional recoveries:</th>
                    <td> <%= CovidNum[1].addrecoveries %></td>

                </tr>

                <tr>
                    <th> Previous daily additional Severe and Critical cases:</th>
                    <td><%= CovidNum[1].addsevere %> </td>

                </tr>
    
            </table>
            </div>
    
            <div class="column">
                <h1 style="text-align:center"> Weekly Cases </h1>
                <!-- GRAPH WEEKLY-->
                <canvas id="myChart2" style="width:100%;max-width:600px;margin:auto"></canvas>
                <script>
                var xValuesz = ['<%= CovidNumW[0].weeknum %>','<%= CovidNumW[1].weeknum %>','<%= CovidNumW[2].weeknum %>','<%= CovidNumW[3].weeknum %>','<%= CovidNumW[4].weeknum %>','<%= CovidNumW[5].weeknum %>'];
                    
                    new Chart("myChart2", {
                    type: "line",
                    data: {
                        labels: xValuesz,
                        datasets: [{ 
                            data: ['<%= CovidNumW[0].addcases %>','<%= CovidNumW[1].addcases %>','<%= CovidNumW[2].addcases %>','<%= CovidNumW[3].addcases %>','<%= CovidNumW[4].addcases %>','<%= CovidNumW[5].addcases %>'],
                        borderColor: "red",
                        fill: false
                      
                        }]
                    },
                    options: {
                        legend: {display: false}
                    }
                    });
                    </script>
    
                    <h1 style="text-align:left"> Data Analysis </h1>
                    <table class="inline">
                        <tr>
                            <th> Current week's additional cases:</th>
                            <td> <%= CovidNumW[0].addcases %></td>
                        </tr>
                        
    
                        <tr>
                            <th> Current week's additional death:</th>
                            <td> <%= CovidNum[0].adddeath %></td>
                        </tr>
    
                        <tr>
                            <th> Current week's additional recoveries:</th>
                            <td> <%= CovidNum[0].addrecoveries %></td>
                        </tr>
    
                        <tr>
                            <th> Current week's additional Severe and Critical cases:</th>
                            <td> <%= CovidNum[0].addsevere %></td>
                        </tr>
    
                      
    
                    </table>
                    
                    <!-- previous week -->
                    <table class="inline">
                       
                        <tr>
                            <th> Previous week's additional cases:</th>
                            <td> <%= CovidNumW[1].addcases %></td>
                        </tr>
    
                        <tr>
                            <th> Previous week's additional death:</th>
                            <td> <%= CovidNumW[1].adddeath %></td>
                        </tr>
    
                        <tr>
                            <th> Previous week's additional recoveries:</th>
                            <td> <%= CovidNumW[1].addrecoveries %></td>
                        </tr>
    
                        <tr>
                            <th> Previous week's additional Severe and Critical cases:</th>
                            <td> <%= CovidNumW[1].addsevere %></td>
                        </tr>
    
                   
                    </table>
                <!-- GRAPH WEEKLY-->
            </div>
        </div>
